# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Render.com PostgreSQL)
# Render.com automatically sets DATABASE_URL and these variables:
# PGHOST, PGUSER, PGPASSWORD, PGDATABASE, PGPORT
DATABASE_URL=your_render_postgresql_url

# For local development, use these instead:
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_db_name
# DB_SSL=false

# Security
JWT_SECRET=your_secure_jwt_secret_key
JWT_EXPIRY=24h

# CORS Configuration
# For production, list all allowed origins
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# File Upload Configuration
# For Render.com production (persistent storage)
UPLOAD_PATH=/opt/render/project/uploads
# Optional: Set explicit URL for serving uploaded files
UPLOAD_URL=https://your-app.onrender.com/uploads

# Rate Limiting (in milliseconds for time windows)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
LOGIN_MAX_ATTEMPTS=5         # Max login attempts per window
UPLOAD_MAX_ATTEMPTS=10       # Max upload attempts per window

# File Upload Limits
UPLOAD_MAX_SIZE=5242880     # 5MB in bytes
UPLOAD_MAX_FILES=1          # Maximum files per request

# Admin Configuration
# Change these immediately after deployment
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password_immediately

# SSL/TLS Configuration
# Render.com handles SSL automatically
SSL_REQUIRED=true           # Force SSL in production